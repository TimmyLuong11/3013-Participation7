<Window x:Class="GOT_Quote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOT_Quote"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://www.kolpaper.com/wp-content/uploads/2020/04/GOT-Wallpaper-Desktop.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="buttonQuote" Content="Random Quote" HorizontalAlignment="Left" Margin="520,332,0,0" VerticalAlignment="Top" IsDefault="True" Click="buttonQuote_Click"/>
        <TextBlock x:Name="txtBlock" HorizontalAlignment="Left" Margin="45,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="103" Width="355" Foreground="White"/>
        <Button x:Name="buttonExport" Content="Export Quote" HorizontalAlignment="Left" Margin="648,332,0,0" VerticalAlignment="Top" Click="buttonExport_Click_1"/>

    </Grid>
</Window>
